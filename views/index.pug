doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  title Âm nhạc
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6', crossorigin='anonymous')
body(style="background-color: #f1f2e3")
    .container.mb-5
        .title.w-100.text-center.my-5
            h2 Danh sách bài hát HOT
        .list-music.row
            for music in data
                .col-4.my-4
                    .card(style="box-shadow: 2px 2px 6px #999")
                        img.card-img-top(src='/public/images/'+music.imageName, alt='avatar', key=music.id)
                        .card-body
                            h5.card-title=music.title
                            p.card-text=music.singerName
                            audio(src='/stream/'+music.id, controls='', style='width: 90%;')
